{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": "Application",
  "description": "",
  "longDescription": "By default, it provides you with a sample app. You can bring your own app by replacing the sample URL with a URL to your own source code repository.",
  "type": "object",
  "properties": {
    "source-provider": {
        "description": "Source provider description",
        "type": "string",
        "disabled": false,
        "pattern": "\\S"
    }
  },
  "form": [{
    "type": "selectfieldset",
    "display": {
      "component": "tilegroup",
      "orientation": "horizontal",
      "showLabel": false,
      "invalidOptionMsg": "Unsupported configuration option. Try **Expert mode**."
    },
    "key": "type",
    "enum": ["clone", "link"],
    "titleMap": {
      "clone": "Use default sample",
      "link": "Bring your own app"
    },
    "items": [{
        "type": "section",
        "items": ["repo_name"]
      },
      {
        "type": "section",
        "items": ["repo_url"]
      }
    ]
  },
  {
    "type": "table",
    "columnCount": 1,
    "widths": ["100%"],
    "items": [
      {
        "type": "selectfieldset",
        "display": {
          "showLabel": true
        },
        "key": "type",
        "enum": ["hostedgit", "githubconsolidated", "gitlab", "bitbucketgit", "github_integrated"],
        "titleMap": {
          "hostedgit": "Git Repos and Issue Tracking",
          "githubconsolidated": "GitHub",
          "gitlab": "GitLab",
          "bitbucketgit": "Bitbucket",
          "github_integrated": "GitHub Enterprise Whitewater"
        }
      }]
  }]
}
